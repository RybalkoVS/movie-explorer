<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".presentation.fragment.MovieListFragment">

    <LinearLayout
        android:id="@+id/layout_search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp">

    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="@string/search"
        android:inputType="text"
        android:drawableStart="@drawable/ic_search"
        android:importantForAutofill="no"
        android:layout_weight="0.9"
        />

    <ImageButton
        android:id="@+id/image_btn_filters"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_filters"
        android:background="@color/white"
        android:layout_weight="0.1"
        android:contentDescription="@string/filters" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_search_field"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>